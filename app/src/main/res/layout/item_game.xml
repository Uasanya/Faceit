<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_holder"
    android:layout_marginBottom="@dimen/margin8"
    android:orientation="horizontal"
    android:background="@drawable/border_win"

    >

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/date_width"
        android:layout_height="match_parent"
        android:text="@string/example_date"
        android:textSize="@dimen/tv_item_size"
        android:gravity="center"
        android:textColor="@color/stat_color"
        android:layout_marginStart="@dimen/margin_start"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="@dimen/status_size"
        android:layout_height="match_parent"
        tools:text="@string/win"
        android:textSize="@dimen/tv_item_size"
        android:gravity="center"
        android:layout_marginStart="@dimen/in_item_margin"
        android:textColor="@color/stat_color"
        tools:background="@color/win"
        />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="@dimen/score_size"
        android:layout_height="match_parent"
        tools:text="@string/score"
        android:textSize="@dimen/tv_item_size"
        android:gravity="center"
        android:layout_marginStart="@dimen/win_lose_gap"
        android:textColor="@color/stat_color"
        tools:background="@color/win"
        />


    <TextView
        android:id="@+id/tv_map"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="@string/map"
        android:textSize="@dimen/tv_item_size"
        android:gravity="center"
        android:layout_marginStart="@dimen/in_item_margin"
        android:textColor="@color/stat_color"
        />

    <TextView
        android:textSize="@dimen/tv_item_size"
        android:id="@+id/tv_stat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="28â€“4-20(KD:1,4)"
        android:gravity="center"
        android:layout_marginStart="@dimen/in_item_margin"
        android:textColor="@color/stat_color"
        />

</LinearLayout>
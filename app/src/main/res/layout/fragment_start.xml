<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StartFragment"
    android:background="@color/background_start">

    <EditText
        android:id="@+id/ed_nickname"
        android:layout_width="@dimen/ed_width"
        android:layout_height="@dimen/ed_height"
        android:background="@color/et_background"
        android:textSize="@dimen/et_ts"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/enter_nick"/>

    <Button
        android:id="@+id/button_stats"
        android:text="@string/button"
        android:textSize="@dimen/button_ts"
        android:textColor="@color/button_text"
        android:backgroundTint="@color/button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"/>
</androidx.constraintlayout.widget.ConstraintLayout>